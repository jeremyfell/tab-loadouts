{
	"manifest_version": 2,
	"name": "Tab Loadouts",
	"version": "1.0",

	"description": "Easily create tab loadouts, which will open several links in different tabs with a simple keyboard shortcut",
	"icons": {
		"16": "icons/16.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "icons/link19.png"
		},
		"default_title": "Tab Loadouts",
		"default_popup": "html/popup.html"
	},

	"omnibox": {
		"keyword": "/"
	},

	"permissions": ["tabs", "storage", "activeTab", "commands"],

	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Space"
			}
		},
		"add": {
			"suggested_key": {
				"default": "Ctrl+A",
				"mac": "Command+A",
				"linux": "Ctrl+A"
			},
			"description": "Presses the add/override loadout button"
		},
		"swap": {
			"suggested_key": {
				"default": "Ctrl+S",
				"mac": "Command+S",
				"linux": "Ctrl+S"
			},
			"description": "Presses the swap loadouts button"
		},
		"delete": {
			"suggested_key": {
				"default": "Ctrl+D",
				"mac": "Command+D",
				"linux": "Ctrl+D"
			},
			"description": "Presses the delete loadout button"
		}

	}
}
