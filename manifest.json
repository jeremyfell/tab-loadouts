{
	"manifest_version": 2,
	"name": "Tab Loadouts",
	"version": "1.0",

	"description": "__MSG_manifestExtensionDescription__",
	"icons": {
		"16": "icons/16.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "icons/link19.png"
		},
		"default_title": "Tab Loadouts",
		"default_popup": "html/popup.html"
	},

	"permissions": ["tabs", "storage", "bookmarks"],

	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Space"
			}
		}
	},
	"default_locale": "en"
}
